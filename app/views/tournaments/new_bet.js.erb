$('.bet-setup').fadeOut(200, function(){

<% if @step == 4 %>
	$('.jumbotron').animate({height: "+=100px"}, {duration: 500, complete: function(){
		$('.bet-setup').html('<%=j render partial: "step_#{@step}"%>').fadeIn(200);
	}});
<% else %>
	$('.bet-setup').html('<%=j render partial: "step_#{@step}"%>').fadeIn(200);
<% end %>
});
